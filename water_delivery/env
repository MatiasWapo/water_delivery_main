DB_HOST=localhost
DB_PORT=5432

# =====================
# ARCHIVOS ESTÁTICOS Y MEDIA
# =====================
# URL base para archivos estáticos
STATIC_URL=/static/

# URL base para archivos subidos por usuarios
MEDIA_URL=/media/

# Ruta relativa donde se guardarán los archivos subidos (desarrollo)
# En producción se usará una ruta absoluta
MEDIA_ROOT=media/

# =====================
# CONFIGURACIÓN DE SEGURIDAD
# =====================
# Configuración de cookies seguras (False en desarrollo, True en producción)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

# Redirección HTTPS (False en desarrollo, True en producción)
SECURE_SSL_REDIRECT=False

# Configuración HSTS (HTTP Strict Transport Security) - Solo para producción
# En desarrollo, mantener en 0 para evitar problemas con HTTP
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Otras configuraciones de seguridad
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Prevenir clickjacking
SECURE_REFERRER_POLICY=same-origin

# Configuración de proxy
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# =====================
# CONFIGURACIÓN DE CORS
# =====================
